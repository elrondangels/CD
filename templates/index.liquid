<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <div class="hero__content">
      <h1 class="hero__title">
        Premium Products & Exceptional Services
      </h1>
      <p class="hero__subtitle">
        Discover our curated collection of quality products and professional services, crafted to exceed your expectations.
      </p>
      <div class="hero__actions">
        <a href="/collections/all" class="btn btn-primary hero__cta">
          Shop Products
        </a>
        <a href="/pages/services" class="btn btn-secondary hero__cta">
          Book Services
        </a>
      </div>
    </div>
    <div class="hero__image">
      <img src="{{ 'hero-image.jpg' | asset_url }}" alt="Premium products and services" class="hero__img">
    </div>
  </div>
</section>

<!-- Featured Collections -->
<section class="section">
  <div class="container">
    <div class="section__header text-center">
      <h2 class="section__title">Featured Collections</h2>
      <p class="section__subtitle">Explore our most popular products and services</p>
    </div>

    <div class="grid grid--2">
      <!-- Products Collection -->
      <div class="collection-card card">
        <div class="collection-card__image">
          <img src="{{ 'products-collection.jpg' | asset_url }}" alt="Products Collection">
        </div>
        <div class="collection-card__content card__content">
          <h3 class="collection-card__title">Premium Products</h3>
          <p class="collection-card__description">
            Discover our handpicked selection of quality products, from everyday essentials to luxury items.
          </p>
          <a href="/collections/all" class="btn btn-primary">Browse Products</a>
        </div>
      </div>

      <!-- Services Collection -->
      <div class="collection-card card">
        <div class="collection-card__image">
          <img src="{{ 'services-collection.jpg' | asset_url }}" alt="Services Collection">
        </div>
        <div class="collection-card__content card__content">
          <h3 class="collection-card__title">Professional Services</h3>
          <p class="collection-card__description">
            Book our expert services for personalized consultations, custom orders, and premium support.
          </p>
          <a href="/pages/services" class="btn btn-primary">View Services</a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Products -->
<section class="section section--alt">
  <div class="container">
    <div class="section__header text-center">
      <h2 class="section__title">Featured Products</h2>
      <p class="section__subtitle">Handpicked selections from our best-selling items</p>
    </div>

    <div class="products-grid">
      {% for product in collections['all'].products limit: 8 %}
        <div class="product-card card">
          <a href="{{ product.url }}" class="product-card__link">
            <div class="product-card__image">
              <img src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title }}">
              {% if product.compare_at_price > product.price %}
                <span class="product-card__badge">Sale</span>
              {% endif %}
            </div>
            <div class="product-card__content card__content">
              <h4 class="product-card__title">{{ product.title }}</h4>
              <div class="product-card__price">
                {% if product.compare_at_price > product.price %}
                  <span class="price--compare">{{ product.compare_at_price | money }}</span>
                {% endif %}
                <span class="price--current">{{ product.price | money }}</span>
              </div>
            </div>
          </a>
          <div class="product-card__actions">
            <form method="post" action="/cart/add">
              <input type="hidden" name="id" value="{{ product.variants.first.id }}">
              <button type="submit" class="btn btn-primary btn--full">
                Add to Cart
              </button>
            </form>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="text-center">
      <a href="/collections/all" class="btn btn-secondary">View All Products</a>
    </div>
  </div>
</section>

