<div class="page-header">
  <div class="container">
    <nav class="breadcrumb">
      <a href="/">Home</a>
      <span>/</span>
      {% if collection %}
        <a href="{{ collection.url }}">{{ collection.title }}</a>
        <span>/</span>
      {% endif %}
      <span>{{ product.title }}</span>
    </nav>
  </div>
</div>

<div class="product-page">
  <div class="container">
    <div class="product-layout">
      <!-- Product Images -->
      <div class="product-gallery">
        <div class="product-gallery__main">
          <div class="product-gallery__main-image">
            <img
              src="{{ product.featured_image | img_url: '800x800' }}"
              alt="{{ product.featured_image.alt | default: product.title }}"
              class="product-image"
              id="mainProductImage"
            >
          </div>
        </div>

        {% if product.images.size > 1 %}
        <div class="product-gallery__thumbnails">
          {% for image in product.images %}
          <button
            class="product-thumbnail"
            data-image="{{ image | img_url: '800x800' }}"
            data-alt="{{ image.alt | default: product.title }}"
            {% if forloop.first %}aria-current="true"{% endif %}
          >
            <img src="{{ image | img_url: '100x100', crop: 'center' }}" alt="{{ image.alt | default: product.title }}">
          </button>
          {% endfor %}
        </div>
        {% endif %}
      </div>

      <!-- Product Information -->
      <div class="product-info">
        <div class="product-info__header">
          <h1 class="product-title">{{ product.title }}</h1>

          {% if product.vendor %}
          <p class="product-vendor">{{ product.vendor }}</p>
          {% endif %}

          <div class="product-reviews">
            <div class="product-rating">
              â˜…â˜…â˜…â˜…â˜†
              <span class="rating-count">(4.5) â€¢ 127 reviews</span>
            </div>
          </div>
        </div>

        <div class="product-price">
          {% if product.compare_at_price > product.price %}
            <span class="price--compare">{{ product.compare_at_price | money }}</span>
          {% endif %}
          <span class="price--current">{{ product.price | money }}</span>
          {% if product.compare_at_price > product.price %}
            <span class="price--savings">
              Save {{ product.compare_at_price | minus: product.price | money }}
            </span>
          {% endif %}
        </div>

        {% if product.description %}
        <div class="product-description">
          {{ product.description }}
        </div>
        {% endif %}

        <!-- Product Form -->
        <form method="post" action="/cart/add" class="product-form" id="productForm">
          <!-- Variants -->
          {% for option in product.options %}
          <div class="product-option">
            <label for="option-{{ forloop.index }}" class="option-label">
              {{ option }}
            </label>
            <select
              name="options[{{ option | escape }}]"
              id="option-{{ forloop.index }}"
              class="option-select"
              {% if option.selected_value %}data-default="{{ option.selected_value }}"{% endif %}
            >
              {% for value in option.values %}
              <option value="{{ value | escape }}" {% if option.selected_value == value %}selected{% endif %}>
                {{ value }}
              </option>
              {% endfor %}
            </select>
          </div>
          {% endfor %}

          <!-- Quantity -->
          <div class="product-quantity">
            <label for="quantity" class="quantity-label">Quantity</label>
            <div class="quantity-input">
              <button type="button" class="quantity-btn quantity--minus" aria-label="Decrease quantity">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="5" y1="12" x2="19" y2="12"/>
                </svg>
              </button>
              <input
                type="number"
                id="quantity"
                name="quantity"
                value="1"
                min="1"
                max="{{ product.inventory_quantity | default: 99 }}"
                class="quantity-field"
              >
              <button type="button" class="quantity-btn quantity--plus" aria-label="Increase quantity">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="12" y1="5" x2="12" y2="19"/>
                  <line x1="5" y1="12" x2="19" y2="12"/>
                </svg>
              </button>
            </div>
          </div>

          <!-- Add to Cart -->
          <div class="product-actions">
            {% if product.available %}
              <button type="submit" class="btn btn-primary btn--large product-submit">
                <span class="btn-text">Add to Cart</span>
                <span class="btn-price">{{ product.price | money }}</span>
              </button>

              <button type="button" class="btn btn-outline btn--large wishlist-btn" data-product-id="{{ product.id }}">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                </svg>
                Add to Wishlist
              </button>
            {% else %}
              <button type="button" class="btn btn-secondary btn--large" disabled>
                Out of Stock
              </button>
            {% endif %}
          </div>

          <!-- Product Meta -->
          <div class="product-meta">
            {% if product.inventory_quantity <= 10 and product.inventory_quantity > 0 %}
            <p class="product-stock product-stock--low">
              Only {{ product.inventory_quantity }} left in stock
            </p>
            {% elsif product.available %}
            <p class="product-stock product-stock--available">
              âœ“ In stock and ready to ship
            </p>
            {% endif %}

            {% if product.tags contains 'free-shipping' %}
            <p class="product-shipping">
              ðŸšš Free shipping on this item
            </p>
            {% endif %}

            <p class="product-delivery">
              ðŸ“¦ Ships within 1-2 business days
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

